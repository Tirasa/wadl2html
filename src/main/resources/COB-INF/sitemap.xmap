<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap"
             xmlns:servlet="http://apache.org/cocoon/servlet" 
             xmlns:controller="http://apache.org/cocoon/controller"> 

  <map:pipelines>
    
    <map:pipeline>
      <map:match pattern="css/{filename}.css">
        <map:read src="css/{map:filename}.css"/>
      </map:match>
      <map:match pattern="js/**">
        <map:read src="js/{map:1}"/>
      </map:match>
      <map:match pattern="css/images/**">
        <map:read src="images/{map:1}"/>
      </map:match>
    </map:pipeline>

    <map:pipeline type="noncaching">
      <map:match pattern="">
        <servlet:redirect-to uri="servlet:/index.html"/>
      </map:match>

      <map:match pattern="application.wadl">
        <map:select value="{jexl:cocoon.request.remote}">
          <map:when equals="true">
            <map:read src="servlet:/remote.wadl"/>            
          </map:when>
          <map:otherwise>
            <map:read src="servlet:/local.wadl"/>                        
          </map:otherwise>
        </map:select>        
      </map:match>
      <!-- Read WADL from local filesystem (no schema include) -->
      <map:match pattern="local.wadl">
        <map:generate src="application.wadl"/>
        <map:serialize/>
      </map:match>
      <!-- Read remote WADL (featuring schema include) -->
      <map:match pattern="remote.wadl">
        <map:generate src="https://www.tonjac.org/org.tonjac.schoolsoft.push-1.0-SNAPSHOT/push/application.wadl"/>
        <map:transform src="prepare-include.xsl">
          <map:parameter name="baseURL" value="https://www.tonjac.org/org.tonjac.schoolsoft.push-1.0-SNAPSHOT/push/"/>
        </map:transform>
        <map:transform type="xinclude"/>
        <map:serialize/>
      </map:match>

      <!-- Call this with no params for local WADL or add '?remote=true' for remote WADL -->
      <map:match pattern="index.html">
        <map:generate src="servlet:/application.wadl"/>
        <map:transform src="index.xsl"/>
        <map:serialize type="html"/>
      </map:match>
      <map:match pattern="schema_*_*.html">
        <map:generate src="servlet:/application.wadl"/>
        <map:transform src="schema.xsl">
          <map:parameter name="schema-position" value="{map:1}"/>
          <map:parameter name="schema-prefix" value="{map:2}"/>
        </map:transform>
        <map:serialize type="html"/>
      </map:match>
    </map:pipeline>    
    
  </map:pipelines> 
  
</map:sitemap>
