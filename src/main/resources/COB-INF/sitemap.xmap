<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap"
             xmlns:servlet="http://apache.org/cocoon/servlet" 
             xmlns:controller="http://apache.org/cocoon/controller"> 

  <map:pipelines>
    
    <map:pipeline>
      <map:match pattern="css/{filename}.css">
        <map:read src="css/{map:filename}.css"/>
      </map:match>
      <map:match pattern="js/**">
        <map:read src="js/{map:1}"/>
      </map:match>
      <map:match pattern="css/images/**">
        <map:read src="images/{map:1}"/>
      </map:match>
    </map:pipeline>

    <map:pipeline type="noncaching">
      <map:match pattern="">
        <servlet:redirect-to uri="servlet:/syncope.html"/>
      </map:match>

      <map:match pattern="schema_*_*_*.html">
        <map:generate src="servlet:/{map:1}.wadl"/>
        <map:transform src="schema.xsl">
          <map:parameter name="schema-position" value="{map:2}"/>
          <map:parameter name="schema-prefix" value="{map:3}"/>
        </map:transform>
        <map:serialize type="html"/>
      </map:match>
      <map:match pattern="*.html">
        <map:generate src="servlet:/{map:1}.wadl"/>
        <map:transform src="index.xsl">
          <map:parameter name="application" value="{map:1}"/>
        </map:transform>
        <map:serialize type="html"/>
      </map:match>

      <map:match pattern="*.wadl">
        <map:generate src="{map:1}.wadl"/>
        <map:transform src="prepare-include.xsl"/>
        <map:transform type="xinclude"/>
        <map:serialize/>
      </map:match>
    </map:pipeline>    
    
  </map:pipelines> 
  
</map:sitemap>
